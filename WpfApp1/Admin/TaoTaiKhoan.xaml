        xmlns:local="clr-namespace:WpfApp1.Admin"
        mc:Ignorable="d"
        Title="TaoTaiKhoan" Height="500" Width="500">
        <Grid>
                <Label Content="Tên Đăng Nhập" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" Width="300" Height="50" FontSize="24"/>
                <Label Content="Mật Khẩu" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" Width="300" Height="50" FontSize="24"/>
