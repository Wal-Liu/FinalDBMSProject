                <TextBox x:Name="txbTenDangNhap" HorizontalAlignment="Center" Margin="0,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300" FontSize="24" Height="40" Padding="5,0,0,0"/>
