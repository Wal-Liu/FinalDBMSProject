                <Button x:Name="btnGui" Content="Gửi" Margin="197,294,0,56" Height="40" Width="100" HorizontalAlignment="Left" FontSize="24" Click="btnGui_Click"/>
                <ComboBox x:Name="cbbViTri" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" Width="300" Height="40" FontSize="24" VerticalContentAlignment="Center" Padding="5,3,5,3" SelectedIndex="0">
